# === MyCRM Environment (sample) ===
# Core Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=mycrm.interimhagn.de

# Proxy / HTTPS
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Database (example)
DB_NAME=mycrm
DB_USER=mycrm
DB_PASSWORD=change-me
DB_HOST=localhost
DB_PORT=3306

# Microsoft Auth (django-allauth)
SITE_DOMAIN=mycrm.interimhagn.de
SITE_NAME=MyCRM
ACCOUNT_DEFAULT_HTTP_PROTOCOL=https
SOCIALACCOUNT_PROVIDERS_MICROSOFT_CLIENT_ID=YOUR-APP-CLIENT-ID
SOCIALACCOUNT_PROVIDERS_MICROSOFT_SECRET=YOUR-APP-CLIENT-SECRET
SOCIALACCOUNT_PROVIDERS_MICROSOFT_TENANT=common
MICROSOFT_REDIRECT_URI=https://mycrm.interimhagn.de/accounts/microsoft/login/callback/

# Fritz!Box TR-064
FRITZBOX_ADDRESS=192.168.110.147
FRITZBOX_USERNAME=fritzuser
FRITZBOX_PASSWORD=change-me

# WireGuard / Internal routing
WG_ENABLED=1

# Sipgate Click-to-Call
SIPGATE_TOKEN_ID=sglive-xxxxxx
SIPGATE_TOKEN=yyyyyyyyyyyyyyyyyyyy
# Optional: fixed device id (overrides auto discovery)
#SIPGATE_DEVICE_ID=e123
# Optional: caller id (E.164) â€“ if omitted, sipgate decides default
SIPGATE_CALLER_ID=+498414544240
# Optional: override base url (defaults to https://api.sipgate.com)
#SIPGATE_BASE_URL=https://api.sipgate.com

# Phone normalization
PHONE_DEFAULT_COUNTRY=DE
PHONE_DEFAULT_COUNTRY_CODE=+49
